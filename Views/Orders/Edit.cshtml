@model Eyewear_Store_System.Models.Order
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<section>
<div class="alert alert-primary">
    <h2><a href="~/Orders" class="pull-left"><i class="fas fa-arrow-alt-circle-left fa-lg"></i></a>Edit Order</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="col-md-8 col-lg-6 mx-auto pb-5 d-flex flex-column">
        <div class="col-sm-12 col-md-10 mx-auto  my-3 py-1">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Id)
            <div class="row">
                <div class="col-sm-12">
					<strong>Order No: @Model.Id</strong>  
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-10 mx-auto  my-3 py-1">
            <div class="row">
                <div class="col-sm-12">
					<strong>Client Name: @Model.User.UserName</strong>
				</div>
            </div>
        </div>

        <div class="col-sm-12 col-md-10 mx-auto  my-3 py-1">
            <div class="row">
                <div class="col-sm-12">
				<strong>Price: @Model.Price</strong>
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-10 mx-auto  my-3 py-1">
            <div class="row">
                <div class="col-sm-12">
                    @Html.DropDownList("Status", new SelectList(Eyewear_Store_System.Models.Order.AllStatus), new {@class= "form-control" })
                    @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>        

        <div class="row d-flex justify-content-between">
            <input type="submit" value="Save" class="btn btn-primary col-9 mx-auto" />
        </div>
    </div>
}

