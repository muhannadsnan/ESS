<script type="text/javascript">
var my_func = function(event) {
	var usertypelist=document.getElementById("UserType");
	var usertype= usertypelist.options[usertypelist.selectedIndex].value;
	var branchlist=document.getElementById("BranchId");
	var branch=branchlist.options[branchlist.selectedIndex].text;
	if(usertype == "" || branch=="Select Branch" ){
	alert("Make sure you select user type or branch!");
    event.preventDefault();
	}
    
};
var form = document.getElementById("MyForm");
form.addEventListener("submit", my_func, true);
</script>