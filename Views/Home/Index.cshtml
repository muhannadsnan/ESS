@model IEnumerable< Eyewear_Store_System.Models.Category>
@{
    ViewBag.Title = "Home Page";
}


<!--   CAROUSEL   -->
<div class="section" id="carousel">
    <div class="container">
        <div class="row">
            <div class=" col-xs-12">
                <!-- Carousel Card -->
                <div class="card card-raised card-carousel" style="box-shadow: 0 0; top: -30px; margin-bottom: 0">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
							<li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
							<li data-target="#carouselExampleIndicators" data-slide-to="4"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-100" src="~/Images/kit/b2.jpg" alt="First slide">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/Images/kit/b1.jpg" alt="Second slide">
                                
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-100" src="~/Images/kit/b3.jpg" alt="Third slide">
                            </div>
							<div class="carousel-item">
                                <img class="d-block w-100" src="~/Images/kit/b4.jpg" alt="Fourth slide">
                            </div>
							<div class="carousel-item">
                                <img class="d-block w-100" src="~/Images/kit/b5.jpg" alt="Fifth slide">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <i class="material-icons">keyboard_arrow_left</i>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <i class="material-icons">keyboard_arrow_right</i>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
                <!-- End Carousel Card -->
            </div>
        </div>
    </div>
</div>
<!--   end: CAROUSEL   -->


@foreach (var item in Model)
{
    <div>
        <div class="alert alert-primary">
            <h2 class="titleX">@Html.DisplayFor(modelItem => item.CategoryName)</h2>
        </div>

        <div class="container">
			<div class="card-deck justify-content-center">
            @foreach (var subItem in item.Items)
            {
                <div class="col-sm-6 col-md-4">
                    <div class="card text-primary bg-light mb-3" style="width:98%;height:350px;">
                        <img class="card-img-top" style="height:200px" src="~/Uploads/@subItem.ItemImage" alt="@Html.DisplayFor(modelItem => item.CategoryName)">
                        <div class="card-body">
                            <h5 class="card-title text-primary">@Html.DisplayFor(modelItem => subItem.BrandName)</h5>                        
                            <p class="card-text">@Html.DisplayFor(modelItem => subItem.Color) @Html.DisplayFor(modelItem => subItem.ItemType.CategoryName) for @Html.DisplayFor(modelItem => subItem.Gender).</p>
                            <a href="~/Items/Details/@subItem.Id" class="btn btn-primary">Details</a>
                            @*<div class="card-footer"><small class="text-muted">3 days ago</small></div>*@
                        </div>
                    </div>
                </div>
            }
			</div>
        </div>
    </div>                        
}
