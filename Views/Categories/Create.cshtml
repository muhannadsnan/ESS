@model Eyewear_Store_System.Models.Category

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Create Category</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-5 col-md-2">
                <button type="submit" value="Create" class="btn btn-default btn-block">
                    <span class="glyphicon glyphicon-plus-sign"></span> Create
                </button>
            </div>
        </div>
    </div>
}
<div class="row">
    <div class="col-md-2">
        <a href="/Categories" class="btn btn-default btn-block">
            <span class="glyphicon glyphicon-arrow-left"></span> Back to Categories List
        </a>
    </div>
</div>
