@model Eyewear_Store_System.Models.Category

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="alert alert-primary">
    <h2>Edit Category</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="form-group">
            @Html.LabelFor(model => model.CategoryName, htmlAttributes: new { @class = "control-label col-md-2 col-md-offset-2" })
            <div class="col-md-4">
                @Html.EditorFor(model => model.CategoryName, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CategoryName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2">
                <a href="Categories" class="btn btn-default btn-block">
                    <span class="glyphicon glyphicon-arrow-left"></span> Back to Categories List
                </a>
            </div>
            <div class="col-md-offset-3 col-md-2">
                <button type="submit" value="Save" class="btn btn-default btn-block">
                    <span class="glyphicon glyphicon-floppy-disk"></span> Save
                </button>
            </div>
        </div>
    </div>
}