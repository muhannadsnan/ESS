                }
            },
            methods: {
                fetchInvoices(){
                    this.loading = true
                    axios.get('https://jsonplaceholder.typicode.com/posts')
                    .then((response) => {
                            this.result = response.data
                            //this.$toastr.success('Results are loaded successfully!');
                            this.loading = false
                        })
                        .catch((error) => {
                            console.log(error)
                            this.$toastr.error('Please try again later.', 'Error while loading invoices!');
                            this.loading = false
                        })
                },
                fetchDetails(id){
                    this.loading = true
                    axios.get('@Url.Action("GetInvoiceDetailsById", "Invoices")'+'/'+id)
                    .then((response) => {
                            this.selectedInvoice = response.data
                            //this.$toastr.success('Invoice loaded !!');
                            this.loading = false
                        })
                        .catch((error) => {
                            console.log(error)
                            this.$toastr.error('Please try again later.', 'Error reaching the invoice!');
                            this.loading = false
                        })
                },
				printing(){
					
				}
            },
            created() {
                //this.apploaded = true
                this.fetchInvoices()
            }
        })
</script>
