@model Eyewear_Store_System.Models.Branch

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="alert alert-primary">
    <h2>Edit Branch</h2>
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
<div class="col-md-8 col-lg-6 mx-auto pb-5 d-flex flex-column">                 
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="col-sm-12 col-md-10 mx-auto  my-3 py-1">
            <div class="row">
                <div class="col-sm-12">
                    @Html.EditorFor(model => model.BranchName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.BranchName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-10 mx-auto  my-3 py-1">
            <div class="row">
                <div class="col-sm-12">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="col-sm-12 col-md-10 mx-auto  my-3 py-1">
            <div class="row">
                <div class="col-sm-12">
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        
        <div class="row d-flex justify-content-between">
            <input type="submit" value="Save" class="btn btn-primary col-9 mx-auto" />
        </div>
    </div>
}

<div class="row">
                <div class="col-md-2">
                    <a href=@Url.Action("Index") class="btn btn-default btn-block">
                        <span class="glyphicon glyphicon-arrow-left"></span> Back to Branches List
                    </a>
                </div>
            </div>